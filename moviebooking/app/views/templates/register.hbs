<section class="container">
	<div class="jumbotron text-center">
		<h1>Register User</h1>

		<div class="container register-form">
			<h4>Please fill in the following:</h4>
			<br>
			<div class="text-danger register-error"></div>
			<br>
			<div class="col-sm-6 col-sm-offset-3">
			<form class="form-horizontal" role="form">
				<div class="form-group">
					<label for="register-email" class="col-sm-2 control-label">Email</label>
					<div class="col-sm-10">
						<input type="email" class="form-control input-lg" id="register-email" placeholder="Email">
					</div>
				</div>
				<div class="form-group">
					<label for="register-name" class="col-sm-2 control-label">Name</label>
					<div class="col-sm-10">
						<input type="text" class="form-control input-lg" id="register-name" placeholder="Name">
						<span class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label for="register-password" class="col-sm-2 control-label">Password</label>
					<div class="col-sm-10">
						<input type="password" class="form-control input-lg" id="register-password" placeholder="Password">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="button" class="btn btn-lg btn-danger register-cancel">Cancel</button>
						<button type="button" class="btn btn-lg btn-success register-submit">Register</button>
						<div class="col-sm-4 col-sm-offset-4 loginSpinner hide">
							<img src="img/spinner.gif">
						</div>
					</div>
				</div>
			</form>
			</div>
		</div>
	</div>
<section>